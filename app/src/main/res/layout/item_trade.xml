<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wh">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/addPhoto"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_a_photo_24" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/gothampro_bold"
        android:text="Gamepad"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintStart_toStartOf="@+id/addPhoto"
        app:layout_constraintTop_toBottomOf="@+id/addPhoto" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendBtn3"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gothampro"
        android:text="Принять"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:cornerRadius="@dimen/_15sdp"
        app:icon="@drawable/ic_baseline_done_24"
        app:iconTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteBtn3"
        android:layout_width="@dimen/_125sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/gothampro"
        android:minWidth="@dimen/_110sdp"
        android:text="Отклонить"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:cornerRadius="@dimen/_15sdp"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/sendBtn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sendBtn3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/gothampro_medium"
        android:text="Описание"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="@+id/addPhoto"
        app:layout_constraintTop_toBottomOf="@+id/sendBtn3" />

    <TextView
        android:id="@+id/descCardVp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/gothampro"
        android:maxWidth="@dimen/_280sdp"
        android:text="fjsdgksjdghkjsdhgkjss"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>